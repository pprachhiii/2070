generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Each saved simulation
model Timeline {
  id          Int          @id @default(autoincrement())
  profileId   String?      // ðŸ”¹ Add this field to associate with anonId cookie
  name        String?      // Optional label
  year        Int          // Either 2025 or 2070
  policies    Policy[]
  innovations Innovation[]
  chartData   ChartData[]
  results     Json         // Stores simulation results (COâ‚‚, temperature, etc.)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

// Policies applied 
model Policy {
  id          Int      @id @default(autoincrement())
  timeline    Timeline @relation(fields: [timelineId], references: [id])
  timelineId  Int
  name        String
  description String?
  effect      Json     // Impact details
}

// Eco-tech innovations (future scope)
model Innovation {
  id           Int      @id @default(autoincrement())
  timeline     Timeline @relation(fields: [timelineId], references: [id])
  timelineId   Int
  name         String
  description  String?
  discoveredAt DateTime @default(now())
}

// Chart data (COâ‚‚, temperature, etc.)
model ChartData {
  id         Int      @id @default(autoincrement())
  timeline   Timeline @relation(fields: [timelineId], references: [id])
  timelineId Int
  metric     String   // e.g. "CO2", "Temperature"
  value      Float
}
